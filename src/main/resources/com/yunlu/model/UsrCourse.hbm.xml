<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 用户课程关联  -->
<hibernate-mapping>
    <class name="com.yunlu.model.UsrCourse" table="y_usr_course" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="usrId" type="integer">
            <column name="usr_id" length="50" not-null="true">
                <comment>用户id</comment>
            </column>
        </property>
        <property name="crsId" type="integer">
            <column name="crs_id" not-null="true">
                <comment>课程ID</comment>
            </column>
        </property>
        <property name="isOntop" type="integer">
            <column name="is_ontop" not-null="true">
                <comment>是否置顶（否：0；是：1）</comment>
            </column>
        </property>
        <property name="bannedPostTime" type="string">
            <column name="banned_post_time" length="50">
                <comment>某课程，某用户，论坛被禁言结束时间</comment>
            </column>
        </property>
        <property name="status" type="integer">
            <column name="status">
                <comment>学习状态（准备：0；在学：1；学完：2；退出：3）</comment>
            </column>
        </property>
        <property name="joinCrsTime" type="string">
            <column name="join_crs_time" length="32">
                <comment>加入课程时间</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
