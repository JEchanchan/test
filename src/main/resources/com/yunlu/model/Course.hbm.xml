<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 课程 -->
<hibernate-mapping>
    <class name="com.yunlu.model.Course" table="y_course" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="usrId" type="integer">
            <column name="usr_id" not-null="true">
                <comment>创建课程用户ID</comment>
            </column>
        </property>
        <property name="crsNo" type="string">
            <column name="crs_no" length="50">
                <comment>课程编号（学校前缀_用户输入）</comment>
            </column>
        </property>
        <property name="catId" type="integer">
            <column name="cat_id" not-null="true">
                <comment>学科分类ID</comment>
            </column>
        </property>
        <property name="dpmId" type="integer">
            <column name="dpm_id">
                <comment>院系ID</comment>
            </column>
        </property>
        <property name="schId" type="integer">
            <column name="sch_id" not-null="true">
                <comment>学校ID</comment>
            </column>
        </property>
        <property name="name" type="string" />
        <property name="electiveLimitNum" type="integer">
            <column name="elective_limit_num">
                <comment>选修限制人数</comment>
            </column>
        </property>
        <property name="crsTskIsInuse" type="integer">
            <column name="crs_tsk_is_inuse" not-null="true">
                <comment>课程作业是否对学生可见（隐藏：0；可见：1）</comment>
            </column>
        </property>
        <property name="isYlVisiable" type="integer">
            <column name="is_yl_visiable" not-null="true">
                <comment>是否云中心可见（隐藏：0；可见：1）</comment>
            </column>
        </property>
        <property name="status" type="integer" />
        <property name="operationTime" type="string">
            <column name="operation_time" length="50">
                <comment>操作时间</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
