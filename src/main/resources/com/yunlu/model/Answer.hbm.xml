<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 习题组件答题 -->
<hibernate-mapping>
    <class name="com.yunlu.model.Answer" table="y_crs_chp_sec_tst_answer" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="usrId" type="integer">
            <column name="usr_id" not-null="true">
                <comment>用户ID</comment>
            </column>
        </property>
        <property name="tstId" type="integer">
            <column name="tst_id" not-null="true">
                <comment>习题（组件）ID</comment>
            </column>
        </property>
        <property name="ansContent" type="binary">
            <column name="ans_content">
                <comment>习题组件答案（逗号隔开）</comment>
            </column>
        </property>
        <property name="rightNum" type="integer">
            <column name="right_num">
                <comment>答题正确个数</comment>
            </column>
        </property>
        <property name="operationTime" type="string">
            <column name="operation_time" length="50" not-null="true">
                <comment>操作时间</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
