<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 网站配置 -->
<hibernate-mapping>
    <class name="com.yunlu.model.WebsiteSettings" table="y_website_settings" >
        <id name="id" type="integer">
            <column name="id" length="11" />
            <generator class="increment" />
        </id>
        <property name="name" type="string">
            <column name="name"  length="50">
                <comment>网站名称</comment>
            </column>
        </property>
        <property name="logo" type="string">
            <column name="logo"  length="255">
                <comment>网站LOGO</comment>
            </column>
        </property>
        <property name="title" type="string" > 
            <column name="title" length="50">
                <comment>网站标题</comment>
            </column>
        </property>
        <property name="desc" type="string">
            <column name="desc"  length="255">
                <comment>网站描述</comment>
            </column>
        </property>
        <property name="keyword" type="string">
            <column name="keyword"  length="255">
                <comment>网站关键字</comment>
            </column>
        </property>
        <property name="companyName" type="string">
            <column name="company_name"  length="255">
                <comment>公司名称</comment>
            </column>
        </property>
        <property name="companyAddress" type="string">
            <column name="company_address"  length="255">
                <comment>公司地址</comment>
            </column>
        </property>
        <property name="companyTel" type="string">
            <column name="company_tel" length="50">
                <comment>公司电话</comment>
            </column>
        </property>
        <property name="icp" type="string" length="50">
            <column name="icp" length="50">
                <comment>ICP证书或ICP备案证书号</comment>
            </column>
        </property>
        <property name="domain" type="string">
            <column name="domain" length="255">
                <comment>网站域名</comment>
            </column>
        </property>
        
         <property name="countCode" type="string">
            <column name="count_code" length="1000">
                <comment>网站 Footer 统计代码</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
