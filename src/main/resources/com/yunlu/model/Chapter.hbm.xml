<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 课程章 -->
<hibernate-mapping>
    <class name="com.yunlu.model.Chapter" table="y_crs_chapter" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="crsId" type="integer">
            <column name="crs_id" not-null="true">
                <comment>课程ID</comment>
            </column>
        </property>
        <property name="name" type="string" />
        <property name="sortIndex" type="integer">
        	<column name="sort_index" not-null="true">
                <comment>序号</comment>
            </column>
        </property>
        <property name="status" type="integer" />
    </class>
</hibernate-mapping>
