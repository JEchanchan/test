<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 用户详细资料 -->
<hibernate-mapping>
    <class name="com.yunlu.model.UsrProfile" table="y_usr_profile" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="usrId" type="integer">
            <column name="usr_id" not-null="true">
                <comment>用户ID</comment>
            </column>
        </property>
        <property name="gender" type="integer">
            <column name="gender" not-null="true">
                <comment>性别（男：0；女：1；未知：2）</comment>
            </column>
        </property>
        <property name="age" type="integer">
            <column name="age">
                <comment>年龄</comment>
            </column>
        </property>
        <property name="address" type="string">
            <column name="address">
                <comment>地址</comment>
            </column>
        </property>
        <property name="introducation" type="string">
            <column name="introducation">
                <comment>个人简介，限制140字</comment>
            </column>
        </property>
        <property name="avatarUrl" type="string">
            <column name="avatar_url">
                <comment>头像</comment>
            </column>
        </property>
        <property name="phone" type="string">
            <column name="phone" length="50">
                <comment>电话</comment>
            </column>
        </property>
        <property name="title" type="string">
            <column name="title" length="50">
                <comment>职称</comment>
            </column>
        </property>
        <property name="createdTime" type="string">
            <column name="created_time" length="50">
                <comment>创建时间</comment>
            </column>
        </property>
        <property name="updatedTime" type="string">
            <column name="updated_time" length="50">
                <comment>更新时间</comment>
            </column>
        </property>
        <property name="year" type="string">
            <column name="year" length="50">
                <comment>年</comment>
            </column>
        </property>
        <property name="month" type="string">
            <column name="month" length="50">
                <comment>月</comment>
            </column>
        </property>
        <property name="day" type="string">
            <column name="day" length="50">
                <comment>日</comment>
            </column>
        </property>
        <property name="grade" type="string">
            <column name="grade" length="10">
                <comment>年级（2大二/3大三/4大四/5研一/6研二/7研三）</comment>
            </column>
        </property>
        <property name="englishLevel" type="string">
            <column name="english_level" length="10">
                <comment>英语水平</comment>
            </column>
        </property>
        <property name="schoolScore" type="integer">
            <column name="school_score">
                <comment>在校成绩</comment>
            </column>
        </property>
        <property name="schoolHonor" type="string">
            <column name="school_honor">
                <comment>在校荣誉</comment>
            </column>
        </property>
        <property name="selfAssessment" type="string">
            <column name="self_assessment">
                <comment>自我评价</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
