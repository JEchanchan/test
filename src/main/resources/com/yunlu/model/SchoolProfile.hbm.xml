<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 学校 -->
<hibernate-mapping>
    <class name="com.yunlu.model.SchoolProfile" table="y_school_profile" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="schId" type="integer">
            <column name="sch_id" length="11" not-null="true">
                <comment>学校ID</comment>
            </column>
        </property>
        <property name="bigLogoUrl" type="string">
            <column name="big_logo_url">
                <comment>大LOGO</comment>
            </column>
        </property>
        <property name="smallLogoUrl" type="string">
            <column name="small_logo_url">
                <comment>小LOGO</comment>
            </column>
        </property>
        <property name="personalBgUrl" type="string">
            <column name="personal_bg_url">
                <comment>学生个人中心banner图</comment>
            </column>
        </property>
        <property name="linkCaption" type="string">
            <column name="link_caption">
                <comment>友情链接名称</comment>
            </column>
        </property>
        <property name="linkUrl" type="string">
            <column name="link_url">
                <comment>友情链接地址</comment>
            </column>
        </property>
        <property name="isOnHomepage" type="integer">
            <column name="is_on_homepage" not-null="true">
                <comment>显示在首页（否：0；是：1）</comment>
            </column>
        </property>
         <property name="schWebsiteNickname" type="string">
            <column name="sch_website_nickname" length="255">
                <comment>学校在线课堂名称</comment>
            </column>
        </property>
        <property name="schWebsiteTitle" type="string">
            <column name="sch_website_title" length="255">
                <comment>学校在线课堂名称</comment>
            </column>
        </property>
          <property name="isRegister" type="integer">
            <column name="is_register" not-null="true">
                <comment>学校在线课堂名称</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
