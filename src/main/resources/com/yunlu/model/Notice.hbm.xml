<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 课程通知 -->
<hibernate-mapping>
    <class name="com.yunlu.model.Notice" table="y_crs_notice" >
    <comment></comment>
        <id name="id" type="integer">
            <column name="id" length="11" />
            <generator class="increment" />
        </id>
        <property name="crsId" type="integer">
            <column name="crs_id"  length="11" not-null="true">
                <comment>课程ID</comment>
            </column>
        </property>
        <property name="content" type="byte[]" />
        <property name="operationTime" type="string">
            <column name="operation_time" length="50" not-null="true">
                <comment>操作时间</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
