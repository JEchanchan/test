<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 课程详细信息 -->
<hibernate-mapping>
    <class name="com.yunlu.model.CourseInfo" table="y_crs_info" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="crsId" type="integer">
            <column name="crs_id" not-null="true">
                <comment>课程ID</comment>
            </column>
        </property>
        <property name="crsIntroduction" type="string">
            <column name="crs_introduction" length="255">
                <comment>课程内容简介</comment>
            </column>
        </property>
        <property name="coverName" type="string">
            <column name="cover_name">
                <comment>课程封面图片名称</comment>
            </column>
        </property>
        <property name="coverImgUrl" type="string">
            <column name="cover_img_url">
                <comment>课程封面图片路径</comment>
            </column>
        </property>
        <property name="videoName" type="string">
            <column name="video_name">
                <comment>视频名称</comment>
            </column>
        </property>
        <property name="videoUrl" type="string">
            <column name="video_url">
                <comment>视频路径</comment>
            </column>
        </property>
        <property name="crsDetails" type="binary">
            <column name="crs_details">
                <comment>课程内容详情</comment>
            </column>
        </property>
        <property name="preKnowledge" type="string">
            <column name="pre_knowledge" length="255">
                <comment>预备知识</comment>
            </column>
        </property>
        <property name="startTime" type="string">
            <column name="start_time" length="50">
                <comment>开课时间</comment>
            </column>
        </property>
        <property name="endTime" type="string">
            <column name="end_time" length="50">
                <comment>结课时间</comment>
            </column>
        </property>
        <property name="totalLesson" type="integer">
            <column name="total_lesson">
                <comment>总课时（小时）</comment>
            </column>
        </property>
        <property name="avgLessonPerweek" type="integer">
            <column name="avg_lesson_perweek">
                <comment>平均课时/周</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
