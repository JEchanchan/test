<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="com.yunlu.model.AuthEmail" table="y_auth_email" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="usrId" type="integer">
            <column name="usr_id" not-null="true">
                <comment>用户ID</comment>
            </column>
        </property>
        <property name="authCode" type="string">
            <column name="auth_code">
                <comment>鉴权码</comment>
            </column>
        </property>
        <property name="isEmailAuthed" type="integer">
            <column name="is_email_authed" not-null="true">
                <comment>邮件是否认证(否：0；是：1）</comment>
            </column>
        </property>
        <property name="invalidTime" type="string">
            <column name="invalid_time" length="50">
                <comment>失效时间</comment>
            </column>
        </property>
        <property name="createdTime" type="string">
            <column name="created_time" length="50">
                <comment>创建时间</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
