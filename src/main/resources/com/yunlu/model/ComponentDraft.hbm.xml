<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 小节组件草稿 -->
<hibernate-mapping>
	<class name="com.yunlu.model.ComponentDraft" table="y_crs_component_draft">
		<id name="id" type="integer">
			<column name="id" length="11" />
			<generator class="increment" />
		</id>
		<property name="onlineId" type="integer">
			<column name="online_id" length="11"></column>
		</property>
		<property name="secId" type="integer" not-null="true">
			<column name="sec_id" length="11">
				<comment>小节ID</comment>
			</column>
		</property>
		<property name="name" type="string" />
		<property name="content" type="binary">
			<column name="content">
				<comment>习题（题目、选项及正确答案）、文本（内容）、视频（字幕）</comment>
			</column>
		</property>
		<property name="type" type="integer" not-null="true" />
		<property name="fileId" type="integer">
			<column name="file_id" length="11">
				<comment>文件ID</comment>
			</column>
		</property>
		<property name="sortIndex" type="integer">
			<column name="sort_index" length="11">
				<comment>序号</comment>
			</column>
		</property>
		<property name="operationTime" type="string">
			<column name="operation_time" length="50" not-null="true">
				<comment>操作时间</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>
