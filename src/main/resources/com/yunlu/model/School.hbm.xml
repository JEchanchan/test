<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 学校 -->
<hibernate-mapping>
    <class name="com.yunlu.model.School" table="y_school" >
        <id name="id" type="integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="schNo" type="string">
            <column name="sch_no" length="50" not-null="true">
                <comment>学校编码（全国统一编码）</comment>
            </column>
        </property>
        <property name="schName" type="string">
            <column name="sch_name">
                <comment>名称</comment>
            </column>
        </property>
        <property name="orgType" type="integer">
            <column name="org_type">
                <comment>组织类型（学校：0；第三方机构：1）</comment>
            </column>
        </property>
        <property name="introduction" type="string">
            <column name="introduction">
                <comment>学校或机构介绍</comment>
            </column>
        </property>
        <property name="bigLogoUrl" type="string">
            <column name="big_logo_url">
                <comment>大LOGO</comment>
            </column>
        </property>
        <property name="smallLogoUrl" type="string">
            <column name="small_logo_url">
                <comment>小LOGO</comment>
            </column>
        </property>
        <property name="schBgUrl" type="string">
            <column name="sch_bg_url">
                <comment>背景图</comment>
            </column>
        </property>
        <property name="personalBgUrl" type="string">
            <column name="personal_bg_url">
                <comment>学生个人中心banner图</comment>
            </column>
        </property>
        <property name="linkCaption" type="string">
            <column name="link_caption">
                <comment>友情链接名称</comment>
            </column>
        </property>
        <property name="linkUrl" type="string">
            <column name="link_url">
                <comment>友情链接地址</comment>
            </column>
        </property>
        <property name="coursePrefix" type="string">
            <column name="course_prefix" length="50">
                <comment>课程编号前缀</comment>
            </column>
        </property>
        <property name="isOnHomepage" type="integer">
            <column name="is_on_homepage" not-null="true">
                <comment>显示在首页（否：0；是：1）</comment>
            </column>
        </property>
        <property name="sortIndex" type="integer">
            <column name="sort_index">
                <comment>在首页的显示顺序</comment>
            </column>
        </property>
        <property name="schWebsiteTitle" type="string">
            <column name="sch_website_title" length="50">
                <comment>学校在线课堂名称</comment>
            </column>
        </property>
        <property name="isRecommondCourse" type="integer">
            <column name="is_recommond_course" not-null="true">
                <comment>是否推荐云路课程（否：０；是：1）</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
